<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:style>
        table
        {
            table-layout:fixed;
            margin-left: 4px;
        }

        td
        {
            vertical-align: top;
        }

        span
        {
            font-size: 30px;
        }

        img
        {
            margin-top: -14px;
        }
    </ui:style>
    <g:HTMLPanel ui:field="panel">
        <hr/>
        <p>
            <table>
                <tr>
                    <td colspan="2">
                        <g:HTML ui:field="htmlFile"></g:HTML>
                    </td>
                </tr>
                <tr>
                    <td style="width: 110px;">Auteur:</td>
                    <td><g:Label ui:field="lblAuthor"></g:Label></td>
                </tr>
                <tr>
                    <td>Date d'ajout:</td>
                    <td><g:Label ui:field="lblDate"></g:Label></td>
                </tr>
                <tr>
                    <td>Description:</td>
                    <td><g:Label ui:field="lblDescription"></g:Label></td>
                </tr>
                <tr>
                    <td>Autres mots-cl√©s:</td>
                    <td><g:HTML ui:field="htmlOtherKeywords"></g:HTML></td>
                </tr>
            </table>
        </p>
    </g:HTMLPanel>
</ui:UiBinder>
