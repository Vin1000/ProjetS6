<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:style>
        span
        {
            font-size: 30px;
        }

        img
        {
            margin-top: -14px;
        }
    </ui:style>
    <g:HTMLPanel ui:field="panel">
        <hr/>
        <p>
            <table style="margin-left:4px;table-layout:fixed;">
                <tr>
                    <td colspan="2">
                        <g:HTML ui:field="htmlFile"></g:HTML>
                    </td>
                </tr>
                <tr>
                    <td style="width: 110px;vertical-align:top;">Auteur:</td>
                    <td><g:Label ui:field="lblAuthor"></g:Label></td>
                </tr>
                <tr>
                    <td style="vertical-align:top;">Date d'ajout:</td>
                    <td><g:Label ui:field="lblDate"></g:Label></td>
                </tr>
                <tr>
                    <td style="vertical-align:top;">Description:</td>
                    <td><g:HTML ui:field="lblDescription"></g:HTML></td>
                </tr>
                <tr>
                    <td style="vertical-align:top;">Autres mots-cl√©s:</td>
                    <td><g:HTML ui:field="htmlOtherKeywords"></g:HTML></td>
                </tr>
            </table>
        </p>
    </g:HTMLPanel>
</ui:UiBinder>
